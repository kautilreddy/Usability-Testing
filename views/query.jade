doctype html
html(lang='en')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    link(rel='shortcut icon', href='/img/favicon.ico', type='image/ico')
    link(rel='icon', href='/img/favicon.ico', type='image/ico')
    title Questionare
    link(href='/css/bootstrap.css', rel='stylesheet')
    style(type='text/css').
      .panel-width {
      max-width: 700px;
      }
      th {text-align:center}
    script(type='text/javascript').
      function clearForm(){
      $("#ProjectForm")[0].reset();
      }
    // bootstrap
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //
      if lt IE 9script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    nav.navbar.navbar-inverse
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', aria-expanded='false', data-target='#cmenu')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/home') Usability Testing
        // Collect the nav links, forms, and other content for toggling
        #cmenu.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/#') About Us
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                welcome
                  | admin
                  span.caret
              ul.dropdown-menu
                li
                  a(href='/signout') Log out
        // /.navbar-collapse
      // /.container-fluid
    .container-fluid
      .center-block.col-md-10(style='float: none;')
        .panel.panel-default
          .panel-body.panel-width
            h2#heading Answer the following questions
            br
            .container-fluid
              form#queryForm.form-horizontal.form-signin
                 //input(type='hidden', value='#{project._id}', name='_id')
                 //input(type='hidden', value='#{project.questions.length}', name='totalQues')
                 //input(type='hidden', value='#{project.queryType}', name='queryType')
                ol
                  each question,index in project.questions
                    li
                      label #{question}
                      .form-group
                        table.table.table-bordered.table-striped
                          thead
                            tr
                              th
                                | Strongly Disagree
                                br
                                | 1
                              th 2
                              th 3
                              th 4
                              th
                                | Strongly Agree
                                br
                                | 5
                          tbody
                            tr.question(align='center')
                              td
                                input(type='radio', name='#{index}', required='' value='1')
                              td
                                input(type='radio', name='#{index}' value='2')
                              td
                                input(type='radio', name='#{index}' value='3')
                              td
                                input(type='radio', name='#{index}' value='4')
                              td
                                input(type='radio', name='#{index}' value='5')
                .col-sm-offset-2.col-sm-3
                  button.btn.btn-default(onclick="sendSUS('#{project._id}','#{project.questions.length}','#{project.queryType}')") Submit!
                .col-sm-2
                  p  
                .col-sm-3
                  a.btn.btn-default(onclick='clearForm()')   Clear  
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='/js/bootstrap.js')
    script(src='/js/query.js')
